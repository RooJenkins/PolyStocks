'use client';

import { useEffect, useState } from 'react';
import Link from 'next/link';
import PerformanceChartOption3 from '@/components/PerformanceChartOption3';
import ModelIcon from '@/components/ModelIcon';
import type { AIAgent } from '@/types';

// Mock chart data for when there are no trades
const generateMockChartData = (agents: AIAgent[]) => {
  const now = Date.now();
  const points = 20;
  return agents.map(agent => ({
    ...agent,
    history: Array.from({ length: points }, (_, i) => ({
      timestamp: new Date(now - (points - i) * 3600000),
      value: 10000 + Math.random() * 1000 - 500
    }))
  }));
};

