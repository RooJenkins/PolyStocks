                { id: 'trades' as const, label: 'TRADES' },
                { id: 'positions' as const, label: 'POSITIONS' },
                { id: 'chat' as const, label: 'CHAT' }
              ].map((tab) => (
                <button
                  key={tab.id}
                  onClick={() => setActiveTab(tab.id)}
                  style={{
                    flex: 1,
